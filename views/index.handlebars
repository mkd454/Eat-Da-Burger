<h1>Burgers!</h1>

<h2>Burgers to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{burgers/burgers-block devoured=true}}
      <li>
        {{burger_name}}

        <button class="change-devour" data-id="{{id}}" data-newdevour="{{devoured}}">
          {{#if devoured}}DEVOUR?{{else}}DEVOURED!{{/if}}
        </button>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> To be devoured
  </div>

  <button type="submit">Add a Burger</button>
</form>
